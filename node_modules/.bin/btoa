#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/mnt/c/invoice/node_modules/.pnpm/btoa@1.2.1/node_modules/btoa/bin/node_modules:/mnt/c/invoice/node_modules/.pnpm/btoa@1.2.1/node_modules/btoa/node_modules:/mnt/c/invoice/node_modules/.pnpm/btoa@1.2.1/node_modules:/mnt/c/invoice/node_modules/.pnpm/node_modules:/mnt/c/invoice/node_modules:/mnt/c/node_modules:/mnt/c/invoice/node_modules/btoa/bin/node_modules:/mnt/c/invoice/node_modules/btoa/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../btoa/bin/btoa.js" "$@"
else
  exec node  "$basedir/../btoa/bin/btoa.js" "$@"
fi
